{% extends "base.html.twig" %}

{% block body %}


    <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="panel panel-blue panel-widget ">
                <div class="row no-padding">
                    <div class="col-sm-3 col-lg-5 widget-left">
                        <svg class="glyph stroked bag">
                            <use xlink:href="#stroked-bag"></use>
                        </svg>
                    </div>
                    <div class="col-sm-9 col-lg-7 widget-right">
                        <div class="large">120</div>
                        <div class="text-muted">New Orders</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="panel panel-orange panel-widget">
                <div class="row no-padding">
                    <div class="col-sm-3 col-lg-5 widget-left">
                        <svg class="glyph stroked empty-message">
                            <use xlink:href="#stroked-empty-message"></use>
                        </svg>
                    </div>
                    <div class="col-sm-9 col-lg-7 widget-right">
                        <div class="large">52</div>
                        <div class="text-muted">Comments</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="panel panel-teal panel-widget">
                <div class="row no-padding">
                    <div class="col-sm-3 col-lg-5 widget-left">
                        <svg class="glyph stroked male-user">
                            <use xlink:href="#stroked-male-user"></use>
                        </svg>
                    </div>
                    <div class="col-sm-9 col-lg-7 widget-right">
                        <div class="large">24</div>
                        <div class="text-muted">New Users</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="panel panel-red panel-widget">
                <div class="row no-padding">
                    <div class="col-sm-3 col-lg-5 widget-left">
                        <svg class="glyph stroked app-window-with-content">
                            <use xlink:href="#stroked-app-window-with-content"></use>
                        </svg>
                    </div>
                    <div class="col-sm-9 col-lg-7 widget-right">
                        <div class="large">25.2k</div>
                        <div class="text-muted">Page Views</div>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/.row-->

    <div data-for="one" class="row chart-options">
        <div class="col-xs-12">
            <form class="form-inline">
                <div class="form-group">
                    <label for="sel1">Range:</label>
                    <select class="form-control" id="sel1">
                        <option>Within 1 hour</option>
                        <option>Within 2 hours</option>
                        <option>Within 3 hours</option>
                        <option>Within 4 hours</option>
                    </select>
                </div>
                &nbsp;
                <div class="checkbox">
                    <label><input type="checkbox"> Show average</label>
                </div>
                &nbsp;

                <button type="submit" class="btn btn-default">Reload</button>
            </form>
        </div>
    </div>

    <div class="row chart-container">
        <div class="col-xs-12 wrapper">
            <div id="one" class="ct-chart ct-major-twelfth"></div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bower/chartist/dist/chartist.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/app.home.css') }}" rel="stylesheet">{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('bower/chartist/dist/chartist.min.js') }}"></script>
    <script src="{{ asset('js/app.home.js') }}"></script>
{% endblock %}